{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    // ← tell TS where to look for types
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  // ← make sure we include both .ts and .d.ts
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}
